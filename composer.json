{
	"name": "zeokat/flarum-followlinks",
	"description": "Remove nofollow attribute from links using BBCODE.",
	"type": "flarum-extension",
	"keywords": ["flarum","links","follow","nofollow","seo","bbcode"],
	"author": {
		"name": "Zeokat",
		"homepage": "http://www.vozidea.com"
	},
	"license": "MIT",
	"require": {
		"flarum/core": "^1.0.0"
	},
	"autoload": {
            "psr-4": {
                "Zeokat\\FollowAutolink\\": "src/"
            }
        },
	"support": {
		"source": "https://github.com/Zeokat/flarum-followlinks",
		"issues": "https://github.com/Zeokat/flarum-followlinks/issues"
	},
	"extra": {
		"flarum-extension": {
			"title": "Follow Links BBCODE",
			"icon": {
				"name": "fas fa-heart",
				"backgroundColor": "#6c8dc4",
				"color": "#fff"
			}
		}
	}
}
